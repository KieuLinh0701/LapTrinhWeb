package vn.iotstar.controllers;

import java.sql.Connection;
import java.sql.DriverManager;

import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class DBConnection {
	private final String serverName = "LAPTOP-D9J937E4"; // tên laptop
	private final String dbName = "QUANLYNV"; // tên database
	private final String portNumber = "1433";
	private final String instance = "";
	private final String userID = "sa";
	private final String password = "0123456789";

	public Connection getConnection() throws Exception {
		String url = "jdbc:sqlserver://" + serverName + "\\" + instance + ":" + portNumber + ";databaseName=" + dbName;
		if (instance == null || instance.trim().isEmpty())
			url = "jdbc:sqlserver://" + serverName + ":" + portNumber + ";databaseName=" + dbName;
		Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
		return DriverManager.getConnection(url, userID, password);
	}

	public static void main(String[] args) {
		try {
			System.out.println(new DBConnection().getConnection());
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
